{
  // --- Workspace-wide defaults to stop noisy prompts & bad folder-scoped writes ---
  "npm.packageManager": "npm",
  "[json]": { "editor.defaultFormatter": "vscode.json-language-features" },
  "[jsonc]": { "editor.defaultFormatter": "vscode.json-language-features" },
  // Prefer zsh (our wrappers assume /bin/zsh -lc). Also define bash fallback.
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "zsh": { "path": "/bin/zsh", "args": ["-l"] },
    "bash": { "path": "/bin/bash", "args": ["-l"] }
  },
  // Ensure $SHELL inside integrated terminals is sane
  "terminal.integrated.env.osx": { "SHELL": "/bin/zsh" }
